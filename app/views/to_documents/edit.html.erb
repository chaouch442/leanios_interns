<h1 class="text-2xl font-bold mb-6">Modifier le Document</h1>

<%= form_with(model: [@internship.stagiaire, @internship, @to_document], local: true, class: 'bg-white shadow-md rounded-lg p-6') do |form| %>
  <div class="mb-4">
    <%= form.label :name, 'Nom du Document', class: 'block text-gray-700 font-semibold mb-2' %>
    <%= form.text_field :name, class: 'form-input w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
  </div>

  <div class="mb-4">
    <%= form.label :file, 'Télécharger le fichier', class: 'block text-gray-700 font-semibold mb-2' %>
    <%= form.file_field :file, class: 'form-input w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
  </div>

  <div class="mb-4">
    <%= form.label :title, 'Titre', class: 'block text-gray-700 font-semibold mb-2' %>
    <%= form.text_field :title, class: 'form-input w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
  </div>

  <div class="mb-4">
    <%= form.label :description, 'Description', class: 'block text-gray-700 font-semibold mb-2' %>
    <%= form.text_area :description, class: 'form-textarea w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500' %>
  </div>

  <div class="mb-4">
    <%= form.submit 'Mettre à jour', class: 'bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition duration-300' %>
  </div>
<% end %>
