<h1 class="text-3xl font-bold mb-6"><%= @stagiaire.last_name %> <%= @stagiaire.first_name %></h1>

<h2 class="text-2xl font-semibold mb-4">Internships</h2>
<script src="https://cdn.tailwindcss.com"></script>

<table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
  <thead>
    <tr class="bg-gray-100 text-gray-700">
      <th class="px-6 py-3 border-b">ID</th>
      <th class="px-6 py-3 border-b">Date de début</th>
      <th class="px-6 py-3 border-b">Date de fin</th>
      <th class="px-6 py-3 border-b">Spécialité</th>
      
    </tr>
  </thead>
  <tbody>
    <% @internships.each do |internship| %>
      <tr class="hover:bg-gray-50">
        <td class="px-6 py-4 border-b"><%= internship.id %></td>
        <td class="px-6 py-4 border-b"><%= internship.start_date %></td>
        <td class="px-6 py-4 border-b"><%= internship.end_date %></td>
        <td class="px-6 py-4 border-b"><%= internship.speciality %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Documents pour le stage : <%= @internship.title %></h2>

<% @internship.to_documents.each do |document| %>
  <div>
    <p>Nom du document : <%= document.name %></p>
    <p>Archivé : <%= document.archived ? 'Oui' : 'Non' %></p>
<%= link_to 'Modifier', edit_stagiaire_internship_to_document_path(@stagiaire, @internship, document), class: 'px-4 py-2 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50' %>

    <%= link_to 'Archiver', archive_stagiaire_internship_to_document_path(@stagiaire, @internship, document), method: :patch, class: "btn btn-warning" %>

    <%= link_to 'Supprimer', stagiaire_internship_to_document_path(@stagiaire, @internship, document), method: :delete, data: { confirm: 'Êtes-vous sûr?' }, class: "btn btn-danger" %>
  </div>
<% end %>

<%= link_to 'Retour à la liste', stagiaires_path, class: 'inline-block px-4 py-2 mt-4 bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50' %>
